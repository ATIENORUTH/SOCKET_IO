{
  "name": "socket-io-chat-app",
  "version": "1.0.0",
  "description": "Real-time chat application with Socket.io",
  "main": "server/server.js",
  "scripts": {
    "postinstall": "node build-and-copy.js",
    "prestart": "node build-and-copy.js",
    "start": "node server/server.js",
    "server": "node server/server.js",
    "build": "node build-and-copy.js",
    "build-simple": "node build-simple.js",
    "vercel-build": "node build-vercel.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && npm run dev",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "dependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
} 